<div class="banner">
  <h1>Les messages vocaux</h1>
</div >
<div class="container">
  <div class="wrapper-vocals">
        <h1>Crééz un message</h1>
    </div>
    <div class="container">
      <%= simple_form_for (@vocal) do |f| %>
        <%= f.label "Titre" %>
        <%= f.input :name, label: false %>
        <%= f.input :audio %>
        <%= f.button :submit, 'Submit This Form', class: 'btn btn-success' %>
      <% end %>
    </div>
    <br>
    <h1>Vos messages</h1>
    <div class="container-flex">
        <% @vocals.each do |vocal| %>
            <div class="msg">
              <h5><%= "#{vocal.name}" %></h5>
              <em class="ita-msg"><%= "(créé le #{vocal.created_at}) :" %></em>
              <p><%= "#{vocal.audio}" %></p>
              <%= link_to "Delete", vocal_path(vocal), data: {turbo_method: :delete, turbo_confirm: "Are you sure ?"}, class: "btn btn-warning" %>
            </div>
            <br>
          <% end %>
    </div>
  </div>
</div>
