
<ul class="nft_container">
  <li>
      <div class="card-trip">
        <% @nfts.each do |nft| %>
          <% if nft.photo.attached? %>
            <%= link_to nft_path(nft) do %>
              <%= cl_image_tag nft.photo.key, width: "200px", height: "auto", class: "nft-photo" %>
          <% end %>
        <% end %>
        </div>
    </li>
  <% end %>

  </ul>
  <div class="container new-container">
  <h1>Ouvre your sprit</h1>

  <div id="form_nft">
    <%= render "form", nft: @nft %>
  </div>

</div>

</div>
