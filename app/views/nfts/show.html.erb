
<div class="nftpage">
  <%= render "shared/logo" %>
  <div class="nft_wrap">
    <h2 class="subtitle">Images</h2>


    <%= cl_image_tag @nft.photo.key, width: "200px", height: "auto", class: "nft-photo" %>

  <br>
  <%= link_to "Nft", nfts_path, class: "b-brainbud" %>
  <br>
  <%= link_to "Delete", nft_path(@nft), method: :delete, data: {confirm: "Are you sure ?"}, class: "b-brainbud" %>
</div>
<div class="container-share">
        <button class="share-btn">
            <i class="fas fa-share-alt"></i>
        </button>
        <div class="share-options">
            <div class="social-media">
                <button class="social-media-btn"><i class="far fa-folder-open"></i></button>
                <button class="social-media-btn" href="whatsapp.com"><i class="fab fa-whatsapp"></i></button>

                <button class="social-media-btn"><i class="fab fa-instagram"></i></button>
                <button class="social-media-btn"><i class="fab fa-twitter"></i></button>
                <button class="social-media-btn"><i class="fab fa-facebook-f"></i></button>
                <button class="social-media-btn"><i class="fab fa-linkedin-in"></i></button>
            </div>
        </div>
    </div>
    <script>
    const shareBtn = document.querySelector('.share-btn');
    const shareOptions = document.querySelector('.share-options');

    shareBtn.addEventListener('click', () => {
        shareOptions.classList.toggle('active');
    })
    </script>
